<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.knowbinfo.raulscomputershop.MainActivity">

    <ImageView
        android:src="@drawable/image1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:src="@drawable/image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />
    <TextView
        android:src="@+id/text1"
        android:text="Fix all kind of computer issues"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:textColor="#F9A825"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
    <TextView
        android:src="@+id/text2"
        android:text="Contact us: 416-887-3175"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17sp"
        android:textColor="#F9A825"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <TextView
        android:src="@+id/text3"
        android:text="web:www.knowbinfo.com"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17sp"
        android:textColor="#F9A825"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />
    <TextView
        android:src="@+id/text4"
        android:text="Hours of opertaion:"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17sp"
        android:textColor="#F9A825"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="30dp"/>
    <TextView
        android:src="@+id/text4"
        android:text="Mon to Sat: 7AM TO 5PM"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17sp"
        android:textColor="#F9A825"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="30dp"/>
    <TextView
        android:src="@+id/text5"
        android:text="Sunday closed"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17sp"
        android:textColor="#F9A825"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>



